{
  "files.exclude": {
    "**/*.js": { "when": "$(basename).ts" },
    "**/*?.js": { "when": "$(basename).tsx" }
  },
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.tslint": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  // Enable per-language
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  }
}
